<%= form_for([@movie, @review]) do |f| %>
    <fieldset>
      <%= render 'shared/errors', :object => @review %>
      <ol>
        <li class="required">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true %>
        </li>
        <li class="required stars">
          <%= f.label :stars %>

          <% Review::STARS.each do |star| %>
              <span class="star">
                <%= f.radio_button :stars, star %> <%= star %>
              </span>
        <% end%>

        </li>
        <li class="required">
          <%= f.label :comment %>
          <%= f.text_field :comment, size: 100, placeholder: "What did you think?" %>
        </li>
      </ol>
      <p>
        <%= f.submit 'Post Review'%>
        <%= link_to "Cancel", @movie, class: 'button' %>
      </p>
    </fieldset>
<% end %>